username=input(str("Username:"))
password=input("Password:")
login123=input(str("Would you like to login?: "))
attempts=0
if login123=="Yes" or "yes":
    login=input("Please enter your username:" )
    login1=input("Please enter your password:" )
    ###
    if login==username and login1==password:
        password_change=input(str("Would you like to change your password?: "))
        ###
        if password_change== "Yes" or "yes":
            password=input("New Password:")
            star_password=len(password)
            print("Username: ", username)
            print("Password: ", "*"*len(password))
            ###   
            boi=input(str("Would you like to reveal your new password?: "))
            if boi== "Yes" or "yes":
                print("Password: ",password)
    else:
        print("Your username or password was incorrect")
        attempts=attempts+1
        if attempts==3:
            print("You've run out of attempts")
        else:
